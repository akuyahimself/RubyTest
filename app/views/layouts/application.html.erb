<!DOCTYPE html>
<html>
  <head>
    <title>Askme</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
   <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    

    <%= favicon_link_tag 'favicon-16x16.png' %>

    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Arvo:wght@400;700">

    <link rel="stylesheet"
     href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
       crossorigin="anonymous">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" 
    integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
     crossorigin="anonymous"></script>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    
  </head>

  <body>

  <div class="wrapper-main ">
  <nav class="navbar-main navbar navbar-expand-md row 
    d-flex align-items-center" >
  <div class="container-fluid d-flex align-items-center">
    <div class="container-nav col-auto text-wrap">
      <%= link_to "ASKME", root_path, class: "navbar-brand", style: "margin-left: 5px"%>
    </div>
    <div class="col-md-6 col-lg-6 col-sm-6"></div>
    <% if current_user.present? %>
    <div class="container-nav col-auto ">
       

        <p class="username">
          <%= link_to "@#{current_user.nickname}", edit_user_path(current_user)%>
          </p>
      </div>
    <div class="container-nav col-auto ">
      <%= button_to 'Logout', session_path, method: :delete, class: "btn btn-danger username"%>
    </div>
    <% else %>
    <div class="container-nav col-auto text-wrap">
      <%= link_to "Register", new_user_path, class: "nav-item nav-link"%>
    </div>
      <div class="container-nav col-auto text-wrap">
      <%= link_to "Login", new_session_path, class: "nav-item nav-link"%>
    </div>
      
    <% end %>
    </div>
</nav>


    <% if flash[:notice].present? %>
      <p class="mb mt message message-notice"><%= flash[:notice] %> </p>
    <% end %>

    <% if flash[:alert].present? %>
      <p class="mb mt message message-alert"><%= flash[:alert] %> </p>
    <% end %>

    <%= yield %>


  </div>
  </body>
</html>
