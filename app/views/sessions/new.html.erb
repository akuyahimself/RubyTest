<div class="container-user">

  <%= form_with(scope: :session, url: session_path, data: {turbo: false}) do |form| %>
  <div class="container-field">
    <p class="mt"> <%= form.label :email %></p>
    <%= form.text_field :email, placeholder: "example@askme.com",  class: "form-textfield"%>
  </div>

  <div class="container-field">
    <p class="mt"><%= form.label :password %></p>
    <%= form.password_field :password, class: "form-textfield" %>
  </div>

    <p class="mt"> <%= form.submit "Log In!", class: "button-confirm "%></p>
  <% end %>

</div>